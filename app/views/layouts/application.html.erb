<!DOCTYPE html>
<html>
  <head>
    <title>Sonar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>

    <!-- Preloader Start -->
    <div id="preloader">
      <div class="preload-content">
        <div id="sonar-load"></div>
      </div>
    </div>
    <!-- Preloader End -->

    <!-- Grids -->
    <div class="grids d-flex justify-content-between">
      <div class="grid1"></div>
      <div class="grid2"></div>
      <div class="grid3"></div>
      <div class="grid4"></div>
      <div class="grid5"></div>
      <div class="grid6"></div>
      <div class="grid7"></div>
      <div class="grid8"></div>
      <div class="grid9"></div>
    </div>

    <!-- ***** Main Menu Area Start ***** -->
    <div class="mainMenu d-flex align-items-center justify-content-between">
      <!-- Close Icon -->
      <div class="closeIcon">
        <i class="ti-close" aria-hidden="true"></i>
      </div>
      <!-- Logo Area -->
      <div class="logo-area">
        <a href="/"><%= @data.general_info.site_name %></a>
      </div>
      <!-- Nav -->
      <div class="sonarNav wow fadeInUp" data-wow-delay="1s">
        <nav>
          <ul>
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About Me</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/portfolio">Portfolio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
      <!-- Copwrite Text -->
      <div class="copywrite-text">
        <p>
          Copyright &copy;<%= Date.today.year %> All rights reserved
        </p>
        <p>
          This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
        </p>
      </div>
    </div>
    <!-- ***** Main Menu Area End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="menu-area d-flex justify-content-between">
              <!-- Logo Area  -->
              <div class="logo-area">
                <a href="/"><%= @data.general_info.site_name %></a>
              </div>

              <div class="menu-content-area d-flex align-items-center">
                <!-- Header Social Area -->
                <div class="header-social-area d-flex align-items-center">

                  <% @data.general_info.social_profiles.each do |profile| %>
                    <a target="_blank" href="<%= profile.url %>" data-toggle="tooltip" data-placement="bottom" title="<%= profile.name %>"><i class="fa fa-<%= profile.name.downcase %>" aria-hidden="true"></i></a>
                  <% end %>
                  <!--

                  -->
                </div>
                <!-- Menu Icon -->
                <span class="navbar-toggler-icon" id="menuIcon"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <%= yield %>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwuyLRa1uKNtbgx6xAJVmWy-zADgegA2s"></script>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
