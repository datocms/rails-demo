<%
  gray ||= false
  dream ||= false
  dots ||= false
%>

<footer class="footer-area <%= gray ? "bg-gray" : "" %>">
  <% if dream || dots %>
    <!-- back end content -->
    <div class="backEnd-content">
      <% if dots %>
        <%= image_tag "dots.png", class: "dots" %>
      <% end %>
      <% if dream %>
        <h2>Dream</h2>
      <% end %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <!-- Copywrite Text -->
        <div class="copywrite-text">
          <p>
            Copyright &copy;<%= Date.today.year %> All rights reserved
          </p>
          <p>
            This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

